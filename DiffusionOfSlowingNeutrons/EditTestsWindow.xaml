<Window x:Class="NuclearProject.EditTestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuclearProject"
        mc:Ignorable="d"
        Title="Изменить вопрос" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Выберите существующий тест, если хотите добавить вопросы нему, или 
введите новое название, если хотите создать новый тест. " TextWrapping="Wrap" Margin="10,5,10,0"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10,5,10,0">
            <WrapPanel>
                <ComboBox x:Name="TestTypes" Height="25" Width="380"  HorizontalAlignment="Left" SelectionChanged="TestTypes_SelectionChanged"/>
            </WrapPanel>
        </StackPanel>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Выберите тему " TextWrapping="Wrap" Margin="10,5,10,0"/>
        <StackPanel Grid.Column="0" Grid.Row="3" Margin="10,5,10,0">
            <WrapPanel>
                <ComboBox x:Name="Themes" Height="25" Width="380"  HorizontalAlignment="Left" SelectionChanged="Themes_SelectionChanged"/>
            </WrapPanel>
        </StackPanel>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Выберите вопрос" TextWrapping="Wrap" Margin="10,5,10,0"/>
        <StackPanel Grid.Column="0" Grid.Row="5" Margin="10,5,10,0">
            <WrapPanel>
                <ComboBox x:Name="Questions" Height="25" Width="380" HorizontalAlignment="Left" SelectionChanged="Questions_SelectionChanged"/>
            </WrapPanel>
        </StackPanel>
        <Button x:Name="btnNextAction" Grid.Row="6"
                    Click="Next_Action_Click" 
                    Height="30" Margin="10,20, 10, 0" Content="Далее" FontWeight="Bold" Background="CornflowerBlue" HorizontalAlignment="Left" Width="200" IsEnabled="False"/>
    </Grid>
</Window>
